<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:nestedScrollingEnabled="true"
    android:verticalScrollbarPosition="right"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create New Document"
        android:textSize="30dp">

    </TextView>
</RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">
          <EditText
              android:id="@+id/project_name_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_marginRight="20dp"
              android:hint="Enter Project/Client Name">

          </EditText>

          <EditText
              android:id="@+id/project_location_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_marginRight="20dp"
              android:hint="Enter Location"
              android:layout_below="@+id/project_name_id"
              android:inputType="textMultiLine"
              >

          </EditText>

          <EditText
              android:id="@+id/project_contact_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/project_location_id"
              android:hint="Enter Contact No."
              android:inputType="number">

          </EditText>

          <EditText
              android:id="@+id/project_subject_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_marginRight="20dp"
              android:layout_below="@+id/project_contact_id"
              android:hint="Enter Subject">

          </EditText>


          <EditText
              android:id="@+id/project_room_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/project_subject_id"
              android:layout_marginRight="20dp"
              android:hint="Enter Room Type">

          </EditText>


          <EditText
              android:id="@+id/client_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/project_room_id"
              android:layout_marginRight="20dp"
              android:hint="Enter Client Email">

          </EditText>


          <EditText
              android:id="@+id/notes"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/client_email"
              android:layout_marginRight="20dp"
              android:hint="Notes"
              android:gravity="top"
              android:inputType="textMultiLine"
              android:nestedScrollingEnabled="true">

          </EditText>




      </RelativeLayout>

  </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:foregroundGravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/project_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"

            android:layout_marginStart="50dp"
            android:text="ok"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/project_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginEnd="50dp"
            android:text="cancel"
            android:textSize="18sp">

        </Button>




    </RelativeLayout>


</LinearLayout>



